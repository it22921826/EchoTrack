<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/color_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="32dp"
        android:gravity="center_horizontal">

        <!-- Title -->
        <TextView
            android:id="@+id/tvTrackTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="75dp"
            android:layout_marginBottom="24dp"

            android:text="Track Activity"
            android:textColor="@color/white"
            android:textSize="28sp"
            android:textStyle="bold" />

        <!-- Activity Description Input -->
        <EditText
            android:id="@+id/etActivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Describe your eco activity (e.g., recycled, walked, planted)"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:backgroundTint="@color/white"
            android:textSize="18sp"
            android:layout_marginBottom="24dp"/>

        <!-- Date Picker Trigger -->
        <Button
            android:id="@+id/btnSelectDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Date"
            android:textColor="@color/white"
            android:backgroundTint="#88009688"
            android:textSize="15sp"
            android:textAllCaps="false"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"/>

        <!-- Selected Date Display -->
        <TextView
            android:id="@+id/tvDateSelected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"

            android:text="No date selected"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <!-- Save Button -->
        <Button
            android:id="@+id/btnSaveTrack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save Activity"
            android:textColor="@color/white"
            android:backgroundTint="#88009688"
            android:textSize="17sp"
            android:textAllCaps="false"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="20dp"/>

        <!-- Recent Activities -->
        <TextView
            android:id="@+id/tvRecent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"

            android:text="Recent Activities:"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvLastActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"

            android:text="• Planted a tree - 21 August"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tvSecondLastActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"

            android:text="• Recycled plastic - 20 August"
            android:textColor="@color/white"
            android:textSize="15sp" />

    </LinearLayout>
</ScrollView>
