<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/color_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="20dp">

        <!-- User Avatar -->

        <!-- Username -->

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="37dp"
            android:layout_gravity="center_horizontal"

            android:layout_marginTop="30dp"
            android:text="Profile"
            android:textColor="@color/white"
            android:textSize="40sp" />

        <ImageView
            android:id="@+id/imgAvatar"
            android:layout_width="136dp"
            android:layout_height="128dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="75dp"
            android:layout_marginTop="75dp"
            android:background="@color/white"
            android:padding="8dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ph1" />

        <TextView
            android:id="@+id/tvUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"

            android:text="Dasun Chamara"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- Eco Stats -->
        <TextView
            android:id="@+id/tvEcoScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Eco Score: 75"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:layout_marginBottom="6dp"/>

        <TextView
            android:id="@+id/tvStreak"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Streak: 12 days"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:layout_marginBottom="18dp"/>

        <!-- Divider -->
        <View
            android:layout_width="130dp"
            android:layout_height="1dp"
            android:background="@color/white"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="18dp"/>

        <!-- Personal Info -->
        <TextView
            android:id="@+id/tvEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email: dasunchamara@gmail.com"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:layout_marginBottom="6dp"/>

        <TextView
            android:id="@+id/tvMemberSince"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Member since: 2025"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:layout_marginBottom="100dp"/>

        <!-- Edit Profile Button -->
        <Button
            android:id="@+id/btnEditProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Edit Profile"
            android:textColor="@color/white"
            android:backgroundTint="#88009688"
            android:textAllCaps="false"
            android:layout_marginBottom="14dp"/>

        <!-- Logout Button -->
        <Button
            android:id="@+id/btnLogout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:textColor="@color/white"
            android:backgroundTint="@color/primary_green"
            android:textAllCaps="false"
            android:layout_marginBottom="8dp"/>

    </LinearLayout>
</ScrollView>
