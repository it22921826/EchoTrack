<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/color_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:padding="25dp">

        <!-- Top Row: Title and Settings Icon -->

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="210dp"
            android:layout_height="176dp"
            app:srcCompat="@drawable/logo"
            android:layout_gravity="center_horizontal"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <!-- Title -->
            <TextView
                android:id="@+id/tvHomeTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="10dp"
                android:layout_weight="1"

                android:text="Welcome EcoPath!"
                android:textColor="@color/white"
                android:textSize="35sp"
                android:textStyle="bold" />

            <!-- Settings Icon Button -->
            <ImageButton
                android:id="@+id/btnSettings"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@android:color/transparent"
                android:src="@android:drawable/ic_menu_preferences"
                android:contentDescription="Settings"
                android:tint="@color/white"
                android:layout_gravity="center_vertical"
                android:padding="8dp"/>
        </LinearLayout>

        <!-- Stats Cards Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="50dp"
            android:gravity="center">

            <!-- Eco Score Card -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="120dp"
                android:orientation="vertical"
                android:background="@color/accent_blue"
                android:padding="16dp"
                android:layout_marginEnd="8dp"
                android:gravity="center"
                android:elevation="2dp"
                android:clipToOutline="true">

                <TextView
                    android:id="@+id/tvEcoScore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/eco_score"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/tvEcoScoreValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="75"
                    android:textColor="@color/white"
                    android:textSize="28sp"
                    android:textStyle="bold"/>
            </LinearLayout>

            <!-- Streak Card -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="120dp"
                android:orientation="vertical"
                android:background="@color/accent_blue"
                android:padding="16dp"
                android:layout_marginStart="8dp"
                android:gravity="center"
                android:elevation="2dp"
                android:clipToOutline="true">

                <TextView
                    android:id="@+id/tvStreak"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/streak"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/tvStreakValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12 days"
                    android:textColor="@color/white"
                    android:textSize="28sp"
                    android:textStyle="bold"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Quick Actions Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/quick_actions"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginTop="60dp"
            android:layout_gravity="start"/>

        <!-- Action Buttons Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="50dp">

            <Button
                android:id="@+id/btnTrackActivity"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="12dp"
                android:backgroundTint="#88009688"
                android:elevation="2dp"
                android:text="@string/track_activity"
                android:textAllCaps="false"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btnViewProfile"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="12dp"
                android:text="@string/view_profile"
                android:textColor="@color/white"
                android:backgroundTint="#88009688"
                android:textAllCaps="false"
                android:elevation="2dp"/>
        </LinearLayout>

        <Button
            android:id="@+id/btnJoinCommunity"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="12dp"
            android:backgroundTint="#88009688"
            android:text="@string/join_community"
            android:textAllCaps="false"
            android:textColor="@color/white" />

    </LinearLayout>
</ScrollView>
